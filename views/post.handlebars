<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>

  <div class="comments-section">
    {{#if comments}}
      <h3>Comments:</h3>
      <ul>
        {{#each comments}}
          <li>
            <strong>{{this.username}}:</strong> {{this.comment}}
            <p class="comment-date">{{format_date this.createdAt}}</p>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No comments yet.</p>
    {{/if}}
  </div>

  <form class="new-comment-form">
    <div class="form-group">
      <label for="comment">Leave a comment:</label>
      <textarea class="form-input" id="comment" name="comment" required></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>


<script src="./js/comment.js"></script>
